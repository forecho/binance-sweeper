# Binance API 配置（必填）
BINANCE_API_KEY=your_api_key_here
BINANCE_API_SECRET=your_api_secret_here

# 卖出目标币种（可选：USDT 或 BNB，默认 USDT）
SWEEP_TARGET=USDT

# 白名单资产（逗号分隔，这些资产不会被卖出）
# 默认包含：BNB,USDT,BUSD,USDC,FDUSD
# SWEEP_TARGET 会自动加入白名单
WHITELIST=BNB,USDT,BUSD,USDC,FDUSD

# 轮询间隔（秒，默认 60）
POLL_SECONDS=60

# 最小成交额（以目标币计，默认 5.0）
MIN_QUOTE_NOTIONAL=5.0

# 测试模式（true=只打印日志不下单，false=真实下单，默认 true）
DRY_RUN=true

# 自动从币安宝（灵活理财）赎回（true=开启，false=关闭，默认 false）
# 开启后会自动将币安宝中的资产赎回到现货账户再卖出
# 仅支持灵活理财产品，定期理财无法提前赎回
# 需要 API Key 开启「启用万向划转」权限
AUTO_REDEEM_FLEXIBLE_SAVINGS=false

# 自动从资金账户划转（true=开启，false=关闭，默认 false）
# 开启后会自动将资金账户中的资产划转到现货账户再卖出
# 需要 API Key 开启「启用万向划转」权限
AUTO_TRANSFER_FROM_FUNDING=false

# 自动将小额资产转换为 BNB（true=开启，false=关闭，默认 false）
# 开启后会自动将低于最小成交额无法卖出的小额资产转换为 BNB
# 转换后的 BNB 会自动卖出（如果 SWEEP_TARGET=USDT）
# 使用币安官方的小额资产转换（Dust Transfer）功能
# 需要 API Key 开启「启用现货与杠杆交易」权限
AUTO_CONVERT_DUST_TO_BNB=false

# Binance API URL（可选，留空使用官方接口）
# 测试网：https://testnet.binance.vision/api
# BINANCE_API_URL=
